<%= form_with(model: bookmark, local: false) do |form| %>
  <% if bookmark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>

      <ul>
        <% bookmark.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

  <div class="field">
    <h5><%= form.label "Select categories" %></h5> 
    <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
      <%= b.label %>
      <%= b.check_box %>
    <% end %>
  </div>
  
  <div class="field">
    <h5><%= form.label "Select kinds" %></h5>  
    <%= form.collection_check_boxes :kind_ids, Kind.all, :id, :name do |b| %>
      <%= b.label %>
      <%= b.check_box %>
    <% end %>
  </div>

  <div class="actions btn btn-danger">
    <%= form.submit data: {confirm: 'Realmente quieres crear este marcador?'} %>
  </div>
  <br>

<% end %>
